<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88C1E4" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.socialbop.ActivityNvaPublicacion" >

    <TextView
        android:id="@+id/tvApellidoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etA1Nombrepet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFFFFF" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvNombreItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza:"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/razas" />

    <TextView
        android:id="@+id/tvDPIUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género:"
        android:textColor="#FFFFFF" />

    <RadioGroup
        android:id="@+id/RGSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbA3F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hembra"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/rbA3M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macho"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvDPIRecompensa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto:"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/cargarFotoNP8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#003355"
            android:onClick="loadPhoto"
            android:src="@drawable/ic_add"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/borrarFotoNP8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#003355"
            android:src="@drawable/ic_borrar"
            android:onClick="cleanPhoto"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivNP8Foto"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de Extravío:"
        android:textColor="#FFFFFF" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/comunas"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Extravío:"
        android:textColor="#FFFFFF" />

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false" />

    <TextView
        android:id="@+id/tvDPIFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recompensa: (en pesos chilenos)"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etA1recompensa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles:"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etA3detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF" />

</LinearLayout>
</ScrollView>