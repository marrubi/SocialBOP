<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_stacked_solid_bop" >

    <ImageView
        android:id="@+id/ivDPI"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dog" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivDPI"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivDPI"
        android:layout_toRightOf="@+id/ivDPI" >

        <TextView
            android:id="@+id/tvDPINombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Nombre"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvDPIRecompensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:text="Recompensa"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvDPIRaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:text="Raza"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvDPIGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDPINombre"
            android:layout_margin="4dp"
            android:text="Genero"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvDPIComuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDPIRaza"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:text="Comuna"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvDPIFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDPIRecompensa"
            android:layout_margin="4dp"
            android:text="Fecha"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>
