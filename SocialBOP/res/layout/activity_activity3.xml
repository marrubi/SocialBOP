<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ab_stacked_solid_bop"
    tools:context="com.example.socialbop.Activity3" >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/tvApellidoItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nombre:"
	        android:textColor="#FFFFFF" />
	
	    <EditText
	        android:id="@+id/etA3Nombres"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textColor="#FFFFFF" >
	
	        <requestFocus />
	    </EditText>
	
	    <TextView
	        android:id="@+id/tvNombreItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Apellidos:"
	        android:textColor="#FFFFFF" />
	
	    <EditText
	        android:id="@+id/etA3Apellidos"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textColor="#FFFFFF" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Edad:"
	        android:textColor="#FFFFFF" />

	    <EditText
	        android:id="@+id/etA3Edad"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="number"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Género:"
	        android:textColor="#FFFFFF" />
	
	    <RadioGroup
	        android:id="@+id/grupoGenero"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <RadioButton
	            android:id="@+id/rbA3F"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:onClick="isClicked"
	            android:text="Femenino"
	            android:textColor="#FFFFFF" />
	
	        <RadioButton
	            android:id="@+id/rbA3M"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:onClick="isClicked"
	            android:text="Masculino"
	            android:textColor="#FFFFFF" />
	
	    </RadioGroup>
	
	    <TextView
	        android:id="@+id/tvDPIUsuario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Teléfono:"
	        android:textColor="#FFFFFF" />

	    <EditText
	        android:id="@+id/etA3Telefono"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/tvDPIRecompensa"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Correo Electrónico:"
	        android:textColor="#FFFFFF" />
	
	    <EditText
	        android:id="@+id/etA3Correo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textEmailAddress"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nombre de Usuario:"
	        android:textColor="#FFFFFF" />

	    <EditText
	        android:id="@+id/etA3Usuario"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/tvDPIFecha"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Contraseña:"
	        android:textColor="#FFFFFF" />
	
	    <EditText
	        android:id="@+id/etA3Contrasena"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPassword"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Confirmar Contraseña:"
	        android:textColor="#FFFFFF" />
	
	    <EditText
	        android:id="@+id/etA3ConfContrasena"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:inputType="textPassword"
	        android:textColor="#FFFFFF" />
	</LinearLayout>
</ScrollView>
